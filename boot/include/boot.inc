; -------------loader 和 kernel --------
LOADER_BASE_ADDR equ 0x900
LOADER_START_SECTOR equ 0x2
; -------------GDT 描述符属性 ----------
DESC_G_4K equ 0000_0000_1000_0000_0000_0000_0000_0000b
DESC_D_32 equ 0000_0000_0100_0000_0000_0000_0000_0000b
; 0 为 32 位 ; 1 为 64 位
DESC_L	  equ 0000_0000_0000_0000_0000_0000_0000_0000b
; cpu 不用此位, 置0
DESC_AVL  equ 0000_0000_0000_0000_0000_0000_0000_0000b

DESC_LIMIT_CODE2 equ 0000_0000_0000_1111_0000_0000_0000_0000b
DESC_LIMIT_DATA2 equ DESC_LIMIT_CODE2
DESC_LIMIT_VIDEO2 equ 0000_0000_0000_0000_0000_0000_0000_0000b

DESC_P 	  equ 0000_0000_0000_0000_1000_0000_0000_0000b
DESC_DPL0 equ 0000_0000_0000_0000_0000_0000_0000_0000b
DESC_DPL1 equ 0000_0000_0000_0000_0010_0000_0000_0000b
DESC_DPL2 equ 0000_0000_0000_0000_0100_0000_0000_0000b
DESC_DPL3 equ 0000_0000_0000_0000_0110_0000_0000_0000b

DESC_S_CODE    equ 0000_0000_0000_0000_0001_0000_0000_0000b
DESC_S_DATA    equ DESC_S_CODE
DESC_S_SYS	   equ 0000_0000_0000_0000_0000_0000_0000_0000b
; 代码段可执行,非一致性,不可读,已访问位置0
; x = 1, c = 0, r = 0, a = 0
DESC_TYPE_CODE equ 0000_0000_0000_0000_0000_1000_0000_0000b
; 数据段不可执行,非一致性,可读,已访问位置0
; x = 0, c = 0, r = 1, a = 0
DESC_TYPE_DATA equ 0000_0000_0000_0000_0000_0010_0000_0000b

DESC_CODE_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + \
DESC_L + DESC_AVL + DESC_LIMIT_CODE2 + \
DESC_P + DESC_DPL0 + DESC_TYPE_CODE + DESC_S_CODE + 0x00

DESC_DATA_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + \
DESC_L + DESC_AVL + DESC_LIMIT_DATA2 + \
DESC_P + DESC_DPL0 + DESC_TYPE_DATA + DESC_S_DATA + 0x00

DESC_VIDEO_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + \
DESC_L + DESC_AVL + DESC_LIMIT_VIDEO2 + \
DESC_P + DESC_DPL0 + DESC_TYPE_DATA + DESC_S_DATA + 0x0b

; --------------选择子属性-----------------------------------
RPL0 equ 00b
RPL1 equ 01b
RPL2 equ 10b
RPL3 equ 11b
TI_GDT equ 000b
TI_LDT equ 100b
